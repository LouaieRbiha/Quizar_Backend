		"conventional-changelog-emojis": "^3.1.0",
		"debug": "^4.2.0",
		"eslint": "^7.2.0",
		"eslint-config-airbnb": "^18.2.0",
		"eslint-config-node": "^4.1.0",
		"eslint-config-prettier": "^6.12.0",
		"eslint-plugin-import": "^2.21.2",
		"eslint-plugin-jsx-a11y": "^6.3.0",
