{
	"name": "quiz-server",
	"version": "1.0.0",
	"description": "Quiz server responsible for handling client requests, logging, fake auth and many more...",
	"main": "index.js",
	"scripts": {
		"start": "pm2 start config/pm2.json --env production",
		"dev": "pm2 start config/pm2.json",
		"stop": "pm2 stop Quiz-server",
		"reload": "pm2 reload Quiz-server",
		"restart": "pm2 restart Quiz-server",
		"delete": "pm2 delete Quiz-server",
		"monit": "pm2 monit Quiz-server",
		"test": "NODE_ENV=test mocha  --recursive --exit",
		"debug": "DEBUG=* npx nodemon index.js",
		"lint": "eslint --ext .js ./",
		"format": "prettier --write \"*.js\"",
		"version": "conventional-changelog -p emojis -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md"
	},
	"keywords": [
		"Quiz",
		"Server",
		"Express"
	],
	"author": "Rbiha Louaie",
	"license": "ISC",
	"devDependencies": {
		"chai": "^4.2.0",
		"conventional-changelog-cli": "^2.1.0",
