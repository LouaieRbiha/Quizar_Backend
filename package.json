		"mocha": "^8.1.3",
		"mockgoose": "^8.0.4",
		"morgan": "^1.10.0",
		"nodemon": "^2.0.4",
		"prettier": "^2.1.2",
		"supertest": "^5.0.0"
	},
	"dependencies": {
		"cookie-parser": "^1.4.5",
